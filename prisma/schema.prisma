generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dimensao {
  id                 Int                 @id @default(autoincrement())
  tipo               String
  conteudo           String?
  Dimensao_DimensaoA Dimensao_Dimensao[] @relation("DimensaoA")
  Dimensao_DimensaoB Dimensao_Dimensao[] @relation("DimensaoB")
  Disciplina         Disciplina?
  Evento             Evento?
  Motor              Motor?
  Negocio            Negocio?
}

model Dimensao_Dimensao {
  dimensaoA   Dimensao @relation("DimensaoA", fields: [dimensaoAId], references: [id], onDelete: Cascade)
  dimensaoAId Int
  dimensaoB   Dimensao @relation("DimensaoB", fields: [dimensaoBId], references: [id], onDelete: Cascade)
  dimensaoBId Int

  @@id([dimensaoAId, dimensaoBId])
}

model Disciplina {
  dimensao            Dimensao             @relation(fields: [dimensaoId], references: [id], onDelete: Cascade)
  dimensaoId          Int                  @id @unique
  nome                String
  coordenador         String
  semestre            String
  codigo              String               @unique
  alunos_matriculados String[]
  alunos_aprovados    String[]
  editais             Json?
  Disciplinas_Cursos  Disciplinas_Cursos[]
}

model Evento {
  dimensao             Dimensao @relation(fields: [dimensaoId], references: [id], onDelete: Cascade)
  dimensaoId           Int      @id @unique
  nome                 String
  descricao            String
  data_inicio          DateTime
  duracao              String
  custo                Float
  receita              Float
  publico_participante String[]
  qtd_publico          Int
  equipe               String[]
  coordenadores        String[]
  parceiros            String[]
}

model Motor {
  dimensao               Dimensao @relation(fields: [dimensaoId], references: [id], onDelete: Cascade)
  dimensaoId             Int      @id @unique
  nome                   String
  descricao              String
  projetos               Json?
  motor_tipo             String
  data_criacao           DateTime
  lideres                String[]
  equipe                 String[]
  qtd_empresas_atendidas Int
  faturamento            Float
}

model Negocio {
  dimensao          Dimensao @relation(fields: [dimensaoId], references: [id], onDelete: Cascade)
  dimensaoId        Int      @id @unique
  nome              String
  area_atuacao      String
  faturamento_anual Float
  data_criacao      DateTime
  fundadores        String[]
  porte             String
}

model Cursos {
  id                 Int                  @id @default(autoincrement())
  nome               String
  competicoes        String[]
  fomento            Float
  capital_captado    Float
  Disciplinas_Cursos Disciplinas_Cursos[]
}

model Disciplinas_Cursos {
  disciplina   Disciplina @relation(fields: [disciplinaId], references: [dimensaoId], onDelete: Cascade)
  disciplinaId Int
  cursos       Cursos     @relation(fields: [cursosId], references: [id], onDelete: Cascade)
  cursosId     Int

  @@id([disciplinaId, cursosId])
}
